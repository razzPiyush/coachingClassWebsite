extends base.pug

block scripts 
   script(src='/static/index.js')

block style 
   style 
        include ../static/style.css
        include ../static/styleContact.css 

block content 
    div.container
        h1 Contact Us 
        form(action="/contact", method="post", class="myForm") 
           input(type="text", class="myInput", name="name",     placeholder="Enter your name here")
           input(type="phone", class="myInput", name="phone",     placeholder="Enter your phone number here")
           input(type="email", class="myInput", name="email",     placeholder="Enter your email id here")
           input(type="text", class="myInput", name="adress",     placeholder="Enter your adress here")
           input(type="text", class="myInput", name="suggestion",     placeholder="Any suggestions")
           button(class="btn")
               | Submit
